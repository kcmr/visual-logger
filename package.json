{
  "name": "@kuscamara/visual-logger",
  "version": "0.0.0-development",
  "description": "WebComponent to display calls to console methods in a visual terminal",
  "keywords": [
    "web component",
    "custom element",
    "terminal",
    "console",
    "logger",
    "log",
    "xtermjs"
  ],
  "author": {
    "name": "Kus CÃ¡mara",
    "email": "kus.camara@gmail.com"
  },
  "license": "MIT",
  "main": "index.js",
  "module": "index.js",
  "files": [
    "src/",
    "visual-logger.js",
    "custom-elements.json",
    "api.md"
  ],
  "scripts": {
    "prestart": "rimraf dist",
    "start": "parcel demo/index.html",
    "prenow-build": "rimraf public",
    "now-build": "parcel build demo/index.html --no-source-maps --out-dir public",
    "lint": "npm-run-all lint:*",
    "lint:lit": "lit-analyzer",
    "lint:eslint": "eslint --ext .js,.html . --ignore-path .gitignore",
    "lint:prettier": "prettier \"**/*.js\" --check --ignore-path .gitignore",
    "format": "npm-run-all format:*",
    "format:eslint": "eslint --ext .js,.html . --fix --ignore-path .gitignore",
    "format:prettier": "prettier \"**/*.js\" --write --ignore-path .gitignore",
    "test": "karma start --coverage --log-level disable",
    "test:watch": "karma start --auto-watch=true --single-run=false",
    "docs": "npm-run-all docs:*",
    "docs:md": "wca analyze src/VisualLogger.js --outFile api.md",
    "docs:json": "wca analyze src/VisualLogger.js --outFile custom-elements.json"
  },
  "dependencies": {
    "lit-element": "^2.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@open-wc/eslint-config": "^2.0.0",
    "@open-wc/prettier-config": "^0.1.10",
    "@open-wc/testing": "^2.0.0",
    "@open-wc/testing-karma": "^3.0.0",
    "@semantic-release/changelog": "^5.0.0",
    "@semantic-release/git": "^9.0.0",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.1.0",
    "deepmerge": "^3.2.0",
    "eslint": "^6.1.0",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.8",
    "lit-analyzer": "^1.1.10",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.4",
    "rimraf": "^3.0.2",
    "semantic-release": "^17.0.4",
    "sinon": "^9.0.0",
    "web-component-analyzer": "^1.0.3",
    "xterm": "^4.4.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "eslintConfig": {
    "extends": [
      "@open-wc/eslint-config",
      "eslint-config-prettier"
    ]
  },
  "prettier": "@open-wc/prettier-config",
  "husky": {
    "hooks": {
      "pre-push": "npm t",
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/changelog",
      "@semantic-release/git"
    ],
    "branch": "master",
    "tagFormat": "${version}"
  },
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kcmr/visual-logger.git"
  },
  "bugs": {
    "url": "https://github.com/kcmr/visual-logger/issues"
  },
  "homepage": "https://github.com/kcmr/visual-logger#readme",
  "engines": {
    "node": ">=10.0.0"
  }
}
